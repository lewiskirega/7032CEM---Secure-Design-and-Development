@model JKLHealthcareSystem.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this patient?</h4>
<hr />

<div class="form-group">
    <label>Name: </label> @Model.Name
</div>

<div class="form-group">
    <label>Address: </label> @Model.Address
</div>

<div class="form-group">
    <label>Medical Record: </label> @Model.MedicalRecord
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
